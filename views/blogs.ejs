<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bloggy.com</title>

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <style>
        :root {
            --header-bg: #111827;
            --header-text: #f9fafb;
            --body-bg: #f3f4f6;
            --card-bg: #ffffff;
            --text-main: #374151;
            --text-title: #111827;
            --accent: #2563eb;
            --border: #e5e7eb;
            --danger: #b91c1c;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lato', sans-serif;
            background-color: var(--body-bg);
            color: var(--text-main);
            line-height: 1.7;
        }

        h1, h2, h3, .brand {
            font-family: 'Playfair Display', serif;
            color: var(--text-title);
        }

        /* ---------- NAVBAR ---------- */
        .navbar {
            background-color: var(--header-bg);
            color: var(--header-text);
            padding: 1.2rem 0;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .nav-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brand {
            font-size: 1.8rem;
            color: #fff;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .btn {
            padding: 0.6rem 1.4rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 700;
            font-size: 0.9rem;
            cursor: pointer;
            border: 1px solid white;
            background: transparent;
            color: #fff;
        }

        /* ---------- MAIN ---------- */
        main {
            padding: 3rem 0;
        }

        .section-title {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            border-bottom: 3px solid var(--text-title);
            padding-bottom: 0.5rem;
            display: inline-block;
        }

        /* ---------- BLOG GRID ---------- */
        .grid-layout {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
            gap: 2rem;
        }

        .blog-card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            padding: 2.5rem;
            display: flex;
            flex-direction: column;
            transition: all 0.2s ease;
        }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .blog-title {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
        }

        .blog-meta {
            font-size: 0.85rem;
            color: #6b7280;
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #f3f4f6;
            padding-bottom: 1rem;
        }

        .blog-content {
            font-size: 1.1rem;
            color: #4b5563;
            margin-bottom: 1.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
        }

        .read-more {
            color: var(--text-title);
            font-weight: 700;
            text-decoration: none;
            border-bottom: 2px solid var(--text-title);
        }

        .owner-actions {
            display: flex;
            gap: 1rem;
        }

        .edit-link {
            font-size: 0.85rem;
            font-weight: 700;
            color: var(--accent);
            text-decoration: none;
            border-bottom: 2px solid transparent;
        }

        .edit-link:hover {
            border-color: var(--accent);
        }

        .delete-btn {
            background: none;
            border: none;
            font-size: 0.85rem;
            font-weight: 700;
            color: var(--danger);
            cursor: pointer;
            padding: 0;
            border-bottom: 2px solid transparent;
        }

        .delete-btn:hover {
            border-color: var(--danger);
        }

        form.inline {
            display: inline;
        }
    </style>
</head>

<body>

    <!-- ---------- NAVBAR ---------- -->
    <nav class="navbar">
        <div class="container nav-content">
            <a href="/" class="brand">BLOGGY.COM</a>

            <div class="nav-links">
                <% if (userId) { %>
                    <a href="/blogs/new" class="btn">Write Article</a>
                    <form action="/logout" method="POST" class="inline">
                        <button class="btn">Log Out</button>
                    </form>
                <% } else { %>
                    <a href="/login" class="btn">Sign In</a>
                    <a href="/register" class="btn">Register</a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- ---------- MAIN CONTENT ---------- -->
    <main class="container">
        <h1 class="section-title">LATEST STORIES</h1>
        

        <div class="grid-layout">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <article class="blog-card">

                        <h2 class="blog-title"><%= blog.title %></h2>

                        <div class="blog-meta">
                            By <%= blog.author.email %>
                        </div>

                        <p class="blog-content"><%= blog.content %></p>

                        <div class="card-footer">
                            <a href="#" class="read-more">Read Full Story</a>

                            <% if (userId && blog.author._id.toString() === userId) { %>
                                <div class="owner-actions">
                                    <a href="/blogs/<%= blog._id %>/edit" class="edit-link">Edit</a>

                                    <form
                                      action="/blogs/<%= blog._id %>?_method=DELETE"
                                      method="POST"
                                      class="inline"
                                    >
                                        <button type="submit" class="delete-btn">Delete</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>

                    </article>
                <% }) %>
            <% } else { %>
                <div style="grid-column: 1 / -1; text-align: center; padding: 4rem;">
                    <h3>No stories yet.</h3>
                    <p>Be the first to publish on our platform.</p>
                </div>
            <% } %>
        </div>
    </main>

</body>
</html>
